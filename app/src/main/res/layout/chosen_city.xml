                <hr.tvz.weatherapp.view.TodayWeatherView
                    android:id="@+id/day5"
                    android:layout_width="wrap_content"
                    app:timeText="@string/today"
                    app:tempText="@string/today"
                    android:layout_marginRight="12dp"
                    android:layout_height="wrap_content"/>
                    <hr.tvz.weatherapp.view.TodayWeatherView
                        android:id="@+id/day6"
                        android:layout_width="wrap_content"
                        app:timeText="@string/today"
                        app:tempText="@string/today"
                        android:layout_marginRight="12dp"
                        android:layout_height="wrap_content"/>
                    <hr.tvz.weatherapp.view.TodayWeatherView
                        android:id="@+id/day7"
