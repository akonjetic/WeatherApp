<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    >

    <androidx.cardview.widget.CardView 
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/surface_surface_1"
        app:cardCornerRadius="15dp"
        app:contentPadding="10dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">

        <TextView
            style="@style/HeadlineMediumNLv1Left"
            android:id="@+id/cityName"
            android:layout_width="272dp"
            android:layout_height="24dp" />

        <TextView
            style="@style/BodyMediumNLv2Left"
            android:id="@+id/latt_long"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:layout_below="@id/cityName"
            android:layout_marginTop="48dp" />

        <ImageView
            android:id="@+id/favoriteIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@id/cityName"
            android:layout_gravity="right"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:id="@+id/weatherType"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="56dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_marginLeft="212dp"
            android:layout_marginTop="60dp"
            style="@style/DisplayLargeNLv1Right"/>
    </androidx.cardview.widget.CardView>


</RelativeLayout>